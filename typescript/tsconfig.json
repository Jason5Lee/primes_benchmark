{
    "compilerOptions": {
        "module": "system",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outFile": "./app.js",
        "sourceMap": true,
        "target": "es6",
        "strict": true,
    },
    "typeRoots": [
        "node_modules/@types"
      ],
    "types": ["node"],  
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}